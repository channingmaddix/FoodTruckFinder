    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        center: new google.maps.LatLng(lat, long),
        mapTypeId: 'terrain'
      });
    
    //create arrays to hold windows and markers:
    var windowArr = [];
    var markerArr = [];

    for (let i = 0; i < ftLatArr.length; i++){
        //create content:
        var contentString = '<div id="content">'+
      '<div id="siteNotice">'+
